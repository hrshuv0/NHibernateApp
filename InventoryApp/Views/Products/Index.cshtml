@model IList<Product>

@{
    ViewBag.Title = "Product";
    Layout = "_Layout";
}

<h2>Product</h2>

<div class="container-fluid">
    <div class="w-50">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>