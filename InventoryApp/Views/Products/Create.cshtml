@model Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Create</h2>

<div class="container-fluid">
    <div class="w-25">
        <form asp-controller="Products" asp-action="Create" method="post" asp-antiforgery="true">
            <div>
                <div class="form-group">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" type="text" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Category"></label>
                    <input class="form-control" asp-for="Category" type="text" />
                    <span class="text-danger" asp-validation-for="Category"></span>
                </div>

            </div>
            <div>
                <input class="btn btn-outline-success mt-2" type="submit" value="Create"/>
            </div>
        </form>
    </div>

</div>